@inject DialogService DialogService

<div class="rz-p-12 rz-text-align-center">
    <RadzenButton Text="Dialog with context help" ButtonStyle="ButtonStyle.Secondary" Click=@ShowCloseableFromOverlayDialog />
</div>

@code {
    async Task ShowCloseableFromOverlayDialog()
    {
        await DialogService.OpenAsync("Dialog with context help button", ds =>
    @<div>
        Click on ? icon to open forum
    </div>, new DialogOptions() { ShowHelp = true, HelpUrl = "https://forum.radzen.com/" });
    }
}