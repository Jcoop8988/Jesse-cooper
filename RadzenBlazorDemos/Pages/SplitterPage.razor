@page "/splitter"


<RadzenExample Name="Splitter">
    <div class="row">
        <div class="col-xl-6">
            <RadzenSplitter Orientation="Orientation.Vertical" OnCollapse=@OnCollapse OnExpand=@OnExpand style="height: 400px; border: 1px solid #777777;">
                <RadzenSplitterPane Size="100px">
                    <RadzenSplitter OnCollapse=@OnCollapse OnExpand=@OnExpand>
                        <RadzenSplitterPane Size="50%" Min="30px" Max="70%">
                            Pane h1 - 50% Min 30px Max 70%
                        </RadzenSplitterPane>
                        <RadzenSplitterPane>
                            Pane h2
                        </RadzenSplitterPane>
                    </RadzenSplitter>
                </RadzenSplitterPane>
                <RadzenSplitterPane Size="100px">
                    <RadzenSplitter OnCollapse=@OnCollapse OnExpand=@OnExpand OnResized=@OnResized>
                        <RadzenSplitterPane Size="50px" Min="30px">
                            Pane h1 - Size 50px Min 30px
                        </RadzenSplitterPane>
                        <RadzenSplitterPane>
                            Pane h2
                        </RadzenSplitterPane>
                        <RadzenSplitterPane Resizable="false">
                            Pane h3 - not resizable
                        </RadzenSplitterPane>
                        <RadzenSplitterPane Min="10%">
                            Pane h4 - Min 10%
                        </RadzenSplitterPane>
                        <RadzenSplitterPane Collapsible="false">
                            Pane h5 - not collapsible
                        </RadzenSplitterPane>
                        <RadzenSplitterPane Visible="false">
                            Pane h6
                        </RadzenSplitterPane>
                        <RadzenSplitterPane Resizable="false">
                            Pane h7 - not resizable
                        </RadzenSplitterPane>
                        <RadzenSplitterPane>
                            Pane h8
                        </RadzenSplitterPane>
                    </RadzenSplitter>
                </RadzenSplitterPane>
                <RadzenSplitterPane>
                    <RadzenSplitter OnCollapse=@OnCollapse OnExpand=@OnExpand>
                        <RadzenSplitterPane>
                            Pane v1
                        </RadzenSplitterPane>
                        <RadzenSplitterPane>
                            Pane v2
                        </RadzenSplitterPane>
                    </RadzenSplitter>
                </RadzenSplitterPane>
            </RadzenSplitter>

        </div>
        <div class="col-xl-6">
            <EventConsole @ref=@console/>
        </div>
    </div>
</RadzenExample>

@code {
    EventConsole console;

    void OnCollapse(RadzenSplitterEventArgs args)
    {
        console.Log($"{args.PaneIndex} OnCollapse");
    }

    void OnExpand(RadzenSplitterEventArgs args)
    {
        console.Log($"{args.PaneIndex} OnExpand");
    }

    void OnResized(RadzenSplitterEventArgs args)
    {
        console.Log($"{args.PaneIndex} OnResized");
    }

}