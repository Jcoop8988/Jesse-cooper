@using Radzen.Blazor
@inherits RadzenComponent

@if (string.IsNullOrEmpty(Path))
{
    <span class="@GetComponentCssClass()">
        @if (ChildContent != null)
        {
            @ChildContent
        }
        else
        {
            @Text
        }
    </span>
}
else
{
    <Microsoft.AspNetCore.Components.Routing.NavLink style="@Style" href="@Path" @attributes="Attributes" class="@GetComponentCssClass()" target="@Target" id="GetId()">
        @if (ChildContent != null)
        {
            @ChildContent
        }
        else
        {
            @Text
        }
    </Microsoft.AspNetCore.Components.Routing.NavLink>
}

@code {
    protected override string GetComponentCssClass()
    {
        string pill = IsPill ? " rz-badge-pill" : "";
        return $"rz-badge rz-badge-{BadgeStyle.ToString().ToLower()}{pill}";
        //return $"badge badge-{BadgeStyle.ToString().ToLower()}{pill}";
    }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public BadgeStyle BadgeStyle { get; set; }

    [Parameter]
    public bool IsPill { get; set; }

    [Parameter]
    public string Path { get; set; } = "";

    [Parameter]
    public string Target { get; set; }
}
