@typeparam TItem
@inherits RadzenSeriesConstantLine<TItem>

@code {
    double? lastValue;
    public override double Value
    {
        get
        {
            var result = Series.Data.Select(e => Series.Value(e)).OrderBy(e => e).Skip(Series.Data.Count() / 2).FirstOrDefault();
            if (lastValue != result)
            {
                ValueChanged.InvokeAsync(result);
                lastValue = result;
            }
            return result;
        }
        set
        {            
        }
    }
}
